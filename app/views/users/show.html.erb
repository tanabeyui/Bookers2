
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction<%= @user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>


<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>
  
  

<h1>Books</h1>
  <% @books.each do |book| %>
    <div>
    <%= image_tag @user.get_profile_image(100,100) %></p>
    <p>Title <%= book.title %></p>
    <p>Opinion<%= book.body %></p>
    </div>
  <% end %>